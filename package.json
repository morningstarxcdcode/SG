{
  "name": "secureguardian",
  "version": "1.0.0",
  "description": "Advanced Personal Security Platform with AI-powered threat detection",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd mobile && expo start",
    "install-mobile": "cd mobile && npm install",
    "install-server": "cd server && npm install",
    "setup": "npm run install-server && npm run install-mobile",
    "build": "cd mobile && expo build",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "security",
    "privacy",
    "threat-detection",
    "ai",
    "mobile-app",
    "hackathon",
    "cybersecurity"
  ],
  "author": "SecureGuardian Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/secureguardian.git"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.5.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "mongodb": "^5.7.0",
    "redis": "^4.6.7",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "node-wifi": "^2.0.15",
    "geoip-lite": "^1.4.7"
  }
}
